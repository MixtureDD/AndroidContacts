<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rl_details_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_name" />

        <TextView
            android:id="@+id/tv_details_name_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="66dp"
            android:layout_toEndOf="@+id/tv_details_name"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_details_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_phone" />

        <TextView
            android:id="@+id/tv_details_phone_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="66dp"
            android:layout_toEndOf="@+id/tv_details_phone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_details_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_details_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_email" />

        <TextView
            android:id="@+id/tv_details_email_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_toEndOf="@+id/tv_details_email" />

    </RelativeLayout>

</LinearLayout>

